@{
    ViewData["Title"] = "Home Page";
}
<style>
    body {
        background-color:rgba(237, 193, 193, 0.95)
    }

    .scene {
        perspective: 800px;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: flex-start;
        height: 100%;
        width: 100%;
        background-size: 100% 100%;
        background-position: center;
        background-repeat: no-repeat;
        margin-left: -50% !important;
    }

    .cube {
        transform-style: preserve-3d;
        position: relative;
        width: 300px;
        height: 300px;
        animation: rotate 20s ease-in-out infinite;
        transform-origin: center center;
    }

    .side {
        position: absolute;
        width: 300px;
        height: 300px;
        background-color: #333;
        opacity: 0.95;
        background-size: cover;
        background-repeat: no-repeat;
    }
    body {
        background-image: url(http://api.thumbr.it/whitenoise-361x370.png?background=ffffffff&noise=5c5c5c&density=13&opacity=62);
    }
    .back {
        transform: translateZ(-150px) rotateX(180deg);
        background-image: url('../images/o3.jpg');
    }

    .left {
        transform: translateX(-150px) rotateY(90deg);
        background-image: url('../images/o1.jpg');
    }

    .right {
        transform: translateX(150px) rotateY(90deg);
        background-image: url('../images/o2.jfif');
    }

    .top {
        transform: translateY(-150px) rotateX(90deg);
        background-image: url('../images/o5.jpg');
    }

    .bottom {
        transform: translateY(150px) rotateX(270deg);
        background-image: url('../images/o4.jpg');
    }

    .front {
        transform: translateZ(150px);
        background-image: url('../images/o6.jpg');
    }

    .text-update{

        font-family:Cambria;
        font-size:26px;
    }
    @@keyframes rotate {
        0% {
            transform: rotateX(0);
        }

        12.5% {
            transform: rotateY(90deg);
        }

        25% {
            transform: rotateY(270deg);
        }

        37.5% {
            transform: rotateY(270deg);
        }

        50% {
            transform: rotateY(360deg);
        }

        62.5% {
            transform: rotateX(90deg);
        }

        75% {
            transform: rotateX(180deg);
        }

        87.5% {
            transform: rotateX(270deg);
        }

        100% {
            transform: rotateX(360deg);
        }
    }
</style>
<div class="container-fluid ">

    <div class="col-lg-7" >
        <div class="container-fluid">
            <div class="row text-center text-justify">
               <br />
               <br />
               <br />
                <p class="text-update">
                    Moshira Royal Palace 2004 yılında kurulan köklü temellere ve temellerinde hizmet anlayışına sahip
                    bir yönetim anlayışına sahiptir.Havuz,spa,sauna 7/24 Açık büfe ve 2 havuz ile size hizmet vermekteyiz.
                    Moshira Royal Palace ile kendinizi bir kral gibi hissedeceksiniz.
                    Rezervasyona bekleniyorsunuz !
                </p>                    

            </div>
        </div>

    </div>
    <div class="col-lg-5">
        <img src="~/images/moshirabg.jpg" />
    </div>

</div>
<div class="container-fluid">
    <div class="col-lg-12">
        <div class="row">
            <div id="booking" class="section">
                <div class="section-left">
                    <div class="scene">
                        <div class="cube">
                            <div class="side back"></div>
                            <div class="side left"></div>
                            <div class="side right"></div>
                            <div class="side top"></div>
                            <div class="side bottom"></div>
                            <div class="side front"></div>
                        </div>
                    </div>
                </div>
                <div class="section-center">
                    <div class="container">
                        <div class="row">
                            <div class="booking-form">
                                <div class="booking-bg">
                                    <div class="form-header">
                                        <h2>Rezervasyonunuzu Yapalım</h2>
                                        <p>Moshira Royal Palace Otelimizde sizi ağırlamaktan büyük onur duyarız.Sizde gelin ve hemen yerinizi ayırtın.</p>
                                    </div>
                                </div>
                                <form>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <span class="form-label">Giriş Günü</span>
                                                <input class="form-control" type="date" required>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <span class="form-label">Çıkış Günü</span>
                                                <input class="form-control" type="date" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <span class="form-label">Oda Tipi</span>
                                        <select id="odasecimi" class="form-control" required>
                                            <option value="" selected hidden>Seçiniz</option>
                                            <option value="durum1">Özel Oda(1-2 Ziyaretçi)</option>
                                            <option value="durum2">Aile Odası (1-5 Ziyaretçi)</option>
                                            <option value="durum3" id="durum333">Balayı Süiti</option>
                                        </select>
                                        <span class="select-arrow"></span>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <span class="form-label">Yetişkin</span>
                                                <select id="yetiskinval" class="form-control kisisecimler">
                                                    <option>1</option>
                                                    <option value="suiticin"> 2</option>
                                                    <option>3</option>
                                                </select>
                                                <span class="select-arrow"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <span class="form-label">Çocuk</span>
                                                <select id="cocukval" class="form-control kisisecimler">
                                                    <option value="cocuksuit">0</option>
                                                    <option>1</option>
                                                    <option>2</option>
                                                </select>
                                                <span class="select-arrow"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-btn">
                                        <button class="submit-btn" id="deneme1">Rezervasyon Oluştur</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>


<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script>
    var odaTuru = document.querySelector("#durum333");
    var secim1 = document.querySelector("#yetiskinval");
    var secim2 = document.querySelector("#cocukval");
    var odalist = document.querySelector("#odasecimi");
    odalist.addEventListener('change', analyseUserSelection);
    function analyseUserSelection(e) {
        if (odaTuru.selected) {
            secim1.disabled = true;
            secim2.disabled = true;
            $(secim1).val('suiticin');
            $(secim2).val('cocuksuit');

        } else if (!odaTuru.selected) {
            secim1.removeAttribute('disabled');
            secim2.removeAttribute('disabled');
        }
    }


</script>

